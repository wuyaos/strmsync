# STRMSync 环境变量配置（示例）

# ==================== 基础配置 ====================
# 时区（影响日志时间与定时任务）
TZ=Asia/Shanghai
# 前端版本（可选，仅用于日志展示）
FRONTEND_VERSION=
# 监听地址
HOST=127.0.0.1
# 服务端口
PORT=6786
# 前端开发端口
FRONTEND_PORT=7786

# ==================== 数据库配置 ====================
# SQLite 数据库路径（相对于运行目录）
DB_PATH=data.db

# ==================== 日志配置 ====================
# 日志级别：debug | info | warn | error
LOG_LEVEL=info
# 日志目录（相对于运行目录）
LOG_PATH=logs
# 是否写入数据库日志表
LOG_TO_DB=true
# 是否打印 SQL 日志
LOG_SQL=false
# SQL 慢查询阈值（毫秒，0 表示记录所有）
LOG_SQL_SLOW_MS=0

# ==================== 安全配置 ====================
# 加密密钥（⚠️ 生产环境必须使用随机的 32 字符字符串）
ENCRYPTION_KEY=please_change_me_32_chars

# ==================== 扫描服务配置 ====================
# 并发 worker 数量
SCANNER_CONCURRENCY=20
# 批量写入数据库的批次大小
SCANNER_BATCH_SIZE=500

# ==================== 通知服务配置 ====================
# 是否启用通知
NOTIFIER_ENABLED=false
# Provider 类型：emby / jellyfin
NOTIFIER_PROVIDER=
# 服务器地址
NOTIFIER_BASE_URL=
# API Token
NOTIFIER_TOKEN=
# 请求超时（秒）
NOTIFIER_TIMEOUT=10
# 最大重试次数
NOTIFIER_RETRY_MAX=3
# 重试基础延迟（毫秒）
NOTIFIER_RETRY_BASE_MS=1000
# 去抖时间（秒）
NOTIFIER_DEBOUNCE=5
# 通知范围：global / source
NOTIFIER_SCOPE=global

# ==================== 网络访问控制 ====================
# 是否允许回环地址（仅测试环境建议开启）
ALLOW_LOOPBACK=false

# ==================== 前端开发配置 ====================
# 前端 Vite 代理后端端口（仅开发）
VITE_BACKEND_PORT=6786
